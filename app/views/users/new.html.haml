%h2 New User

= simple_form_for @form, model :user, as: :user, url: users_path do |f|
  .row
    .col= f.error_notification
  .row
    .col= f.input :name, placeholder: "Name", label: false
  .row
    .col= f.input :email, placeholder: "Email", label: false
  .row
    .col= f.input :game_id, as: :hidden
  .row
    .col= f.button :submit, class: "btn-primary"
  