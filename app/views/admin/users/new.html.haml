%h5= "New User for #{@game.name}"

= simple_form_for @form, as: :user, url: admin_game_users_url do |f|
  .row
    .col= f.error_notification
  .row
    .col= f.input :name, placeholder: "Name", label: false
  .row
    .col= f.input :email, placeholder: "Email", label: false
  .row
    .col= f.button :submit, "Create User", class: "btn-primary"
.row
  .col= link_to "Done", admin_games_path
  