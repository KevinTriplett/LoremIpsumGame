%h5 Editing game

= simple_form_for @form, as: :game, url: admin_game_path(@model.id), method: :patch do |f|
  .row
    .col= f.input :name, placeholder: "Name", label: false
  .row
    .col= f.input :game_days, placeholder: "Number of days for game", label: false
  .row
    .col= f.input :turn_hours, placeholder: "Number of hours per turn", label: false
  .row
    .col= f.button :submit, "Update Game", class: "btn-primary"
.row
  .col= link_to "Cancel", admin_games_path
