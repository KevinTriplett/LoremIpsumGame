%h5= game_name

.row.timestamps
  .col-sm-5
    %p.timestamp
      Game Started:
      %span.utc-time.game-start= game_start
    %p.timestamp
      Game Ends:
      %span.utc-time.game-end= game_end
    %p.timestamp
      Current Player:
      %span.current-player-name= current_player_name
  .col-sm-7
    %p.timestamp
      Turn Started:
      %span.utc-time.turn-start= turn_start
    %p.timestamp
      Turn Ends:
      %span.utc-time.turn-end= turn_end
    %p.timestamp
      Time Left:
      %span.time-left= turn_time_remaining

%hr

.row
  .col#ep{ dataset }= story
.row
  .col= finish_button

%hr

.row
  .col 
    Players
    %ul
      - if users.empty?
        no users yet
      - users.each do |u|
        %li{ class: u.id == current_player_id ? "current-player" : nil }
          = link_to u.name, "mailto:#{u.email}"
          = u.id == current_player_id ? " <== current player" : ""

